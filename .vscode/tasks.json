{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "Build: debug",
            "command": [
                "emBuild -config Debug -project ${config:SES_PROJECT_F407} ./SES/${config:SES_PROJECT_NAME}.emProject"
            ],
            "presentation": {
                "reveal": "always",
                "echo": false
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "Build: release",
            "command": [
                "emBuild -config Release -project ${config:ses_project} ${config:ses_project}.emProject -verbose"
            ],
            "presentation": {
                "reveal": "always",
                "echo": false
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "Build: clean all",
            "command": [
                "emBuild -config Debug -clean -project ${config:SES_PROJECT_F407} ./SES/${config:SES_PROJECT_NAME}.emProject;",
                "emBuild -config Release -clean -project ${config:SES_PROJECT_F407} ./SES/${config:SES_PROJECT_NAME}.emProject;"
            ],
            "presentation": {
                "reveal": "never",
                "echo": true
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "Flash: firmware",
            "command": "JLink",
            "dependsOn": "CMake: build active target",
            "args": [
                "-CommanderScript",
                "${command:cmake.launchTargetPath}.jlink"
            ],
            "group": "test"
        },
        {
            "type": "cmake",
            "label": "CMake: build active target",
            "command": "build",
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build"
            }
        },
        {
            "type": "cmake",
            "label": "CMake: clean rebuild active",
            "command": "cleanRebuild",
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build"
            }
        },
        {
            "label": "Delete: build dir",
            "type": "shell",
            "windows": {
                "command": "rm",
                "args": [
                    "build",
                    "-r",
                    "-force"
                ]
            },
            "linux": {
                "command": "rm",
                "args": [
                    "-rf",
                    "build"
                ]
            },
            "group": "build",
            "presentation": {
                "reveal": "silent"
            }
        }
    ]
}